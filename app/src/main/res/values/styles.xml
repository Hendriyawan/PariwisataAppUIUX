<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbar_style">@style/AppTheme.Toolbar</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:theme">@style/AppTheme.ThemeToolbar</item>
        <item name="android:popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AppTheme.ThemeToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/grey_white</item>
        <item name="android:textColorPrimaryInverse">@color/grey_white</item>
        <item name="android:actionMenuTextColor">@color/grey_white</item>
    </style>

</resources>
